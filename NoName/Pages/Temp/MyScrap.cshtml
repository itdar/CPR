@page
@model NoName.Pages.Temp.MyScrapModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/container.css" />
</head>

<body>
    <div class="row">
        <div class="col-lg-9">

            <div class="card">
                <div class="card-body">내 스크랩</div>
            </div>

            <div class="card" id="postContents">

                <div class="list-group">
                    @for (int i = 0; i < 10; i++)
