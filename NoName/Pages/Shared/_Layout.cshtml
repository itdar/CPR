<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] NoName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*use Jquery*@
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">NoName</a>
                @*CRUD 임시 링크*@
                <a class="navbar-brand text-dark" asp-area="" asp-page="/CRUD/TableBoardCRUD/Create" title="BOARD">게시판생성</a>
                <a class="navbar-brand text-dark" asp-area="" asp-page="/CRUD/TablePostCRUD/Index" title="POST">게시글생성</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    <partial name="_LoginPartial" />
                    @*<ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">홈</a>
                </li>
            </ul>*@
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <form method="post">
                &copy; 2020 - <a asp-page="/Index">NoName</a> -
                <a class="btn btn-outline-dark" asp-page="/Membership/TermsOfService">이용약관</a>
                <a class="btn btn-outline-dark" asp-page="/Membership/Privacy">개인정보처리방침</a>
                <a class="btn btn-outline-dark" asp-page="/Membership/Rules">커뮤니티이용규칙</a>
                <a class="btn btn-outline-dark" asp-page="/Support/Notice">공지사항</a>
                <a class="btn btn-outline-dark" asp-page="/Support/FAQ">문의사항</a>
            </form>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
