@page "{boardId:int?}"
@model NoName.Pages.Board.IndexModel
@{
    ViewData["CurrentBoard"] = Model.CurrentBoard.BoardId;
    int defaultBoardId = Model.CurrentBoard.BoardId % 100;
    var isDefaultBoard = defaultBoardId > 50 ? "d-none" : "";
}
<head>
    <link rel="stylesheet" href="~/css/container.css" />
    @*use javascript about boards*@
    <script type="text/javascript" src="~/js/Board.js"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-9">
                <div class="card card-body">
                    <h3 class="font-weight-bold">@Model.CurrentBoard.BoardName</h3>
                </div>
                @*text, textarea, button 세가지 input을 하나의 구조로 묶기위한 form-group*@
                    <form class="form-group @isDefaultBoard" method="post">
                        @*text타입의 input, data-toggle로 확장-축소 가능, data-target으로 기능 적용할 태그 선택*@
                        <input type="text" id="postTitle" asp-for="TablePost.Title" class="form-control mt-3 mb-1" placeholder="글을 작성하세요">
                        @*<span asp-validation-for="TablePost.Title" class="text-danger"></span>*@
                        <div id="collapseArea" class="form-group collapse">
                            <textarea class="form-control" asp-for="TablePost.Content" placeholder="1. 에티켓을 지켜주세요.&#13;&#10;2. 비방을 삼가해 주세요." rows="7"></textarea>
                            @* <span asp-validation-for="TablePost.Content" class="text-danger"></span>*@
                        </div>
                        <div id="collapseBtn" class="form-group collapse">
                            <row>
                                <input type="submit" class="btn col-sm-12 btn-light" value="게시" @*data-toggle="collapse" data-target="#collapseNote"*@>
                            </row>
                        </div>
                    </form>
                <div class="list-group" id="postContents">
                    @foreach (var item in Model.Pagination)
                    {
                        <a class="list-group-item list-group-item-action"
                           asp-page="/Board/Detail" asp-route-postNumber="@item.PostNumber">
                            <div class="row">
                                <span class="col-sm-1">
                                    @Html.DisplayFor(modelItem => item.PostNumber)
                                </span>
                                <span class="col-sm-9">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </span>
                                <span class="col-sm-2">
                                    @Html.DisplayFor(modelItem => item.CreateTime)
                                </span>
                            </div>
                        </a>
                    }
                </div>
                <div class="container" id="pagination">
                    @*동기식 Partial TagHelper*@
                    <partial name="Pagination" model="Model.Pagination" />
                    @*비동기식 Partial TagHelper
                        @await Html.PartialAsync("Pagination", Model.Pagination)*@
                </div>
            </div>
            <div class="col-lg-3 bg-danger">
                <partial name="SideBar" />
            </div>
        </div>
    </div>
</body>