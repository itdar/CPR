@page

@model NoName.Pages.Board.IndexModel
@{
    string[] posts = new string[14];
    @for (int i = 0; i < 14; i++)
    {
        posts[i] = "글" + (i + 1) + "번째 입니다";
    }
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    @*사용안됨<link rel="stylesheet" href="~/lib/jquery/dist/jquery.min.js" />*@
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-body">직업게시판</div>
                </div>
                @*hot 게시판일 경우 글 작성하는 곳이 없어야 하므로 if 문을 통해서 적용함*@
                @{ 
                    var isJobboard = false;
                 }
                @if (isJobboard == true)
                {

                @*text, textarea, button 세가지 input을 하나의 구조로 묶기위한 form-group*@
                <form class="form-group" method="post">
                    @*text타입의 input, data-toggle로 확장-축소 가능, data-target으로 기능 적용할 태그 선택*@
                    <input type="text" id="postTitle" class="form-control" placeholder="글을 작성하세요">
                    @*placeholder line break code = &#13;&#10;*@
                    <div id="collapseArea" class="form-group collapse">
                        <textarea class="form-control" placeholder="1. 에티켓을 지켜주세요.&#13;&#10;2. 비방을 삼가해 주세요." rows="7"></textarea>
                    </div>
                    <div id="collapseBtn" class="form-group collapse">
                        <row>
                            <button id="postBtn" type="button" class="btn col-sm-12 btn-light" @*data-toggle="collapse" data-target="#collapseNote"*@>게시</button>
                        </row>
                    </div>
                </form>
                }
                <div class="list-group">
                    @for (int i = 0; i < 14; i++)
                    {
                        <a asp-page="/Board/Detail" asp-page-handler="Post" asp-route-postNumber="@(i+1)" class="list-group-item list-group-item-action">@posts[i]</a>
                    }
                </div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center mt-2">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3 bg-danger">
                <partial name="Sidebar" />
            </div>
        </div>
    </div>
</body>
<script>
    $(document).ready(function () {
        $("#postTitle").click(function () {
            $("#collapseArea").collapse('show');
            $("#collapseBtn").collapse('show');
        });
        $("#postBtn").click(function () {
            $("#collapseArea").collapse('hide');
            $("#collapseBtn").collapse('hide');
        });
    });
</script>