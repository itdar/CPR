@*asp-page-handler 앵커태그 사용시 handler와 id가 addressbar에 드러나는것을 숨기고 '/'로 대체*@
@page "{postNumber:int?}"
@model NoName.Pages.Board.DetailModel
@{
    ViewData["CurrentPost"] = Model.CurrentPost.BoardId;
}
<head>
    <script type="text/javascript" src="~/js/Board.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" 
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-9">
                <div class="card card-body">
                    <h3 class="font-weight-bold">직업게시판</h3>
                </div>
                <div id="likeCount"class="card" style="margin-top:10px">
                    <div class="card-header bg-white">
                        <p>
                            <h5>
                                익명
                                <a href="#reportModal" class="badge badge-light float-right" data-toggle="modal">신고</a>
                                <a href="#messageModal" class="badge badge-light float-right" data-toggle="modal">쪽지</a>
                            </h5>
                        </p>
                        @Model.CurrentPost.CreateTime
                    </div>
                    <div class=" card-body" id="post-context" style="height:200px;">
                        <div  class="card-title ">
                            <h5 class="font-weight-bold">
                                
                                @Model.CurrentPost.Title
                                @* 글 상세의 사진,좋아요,댓글 수 ,스크랩 *@
                                <a href="#bookMarkModal"class="badge badge-light float-right fas fa-bookmark text-warning" data-toggle="modal">0</a>
                                <span class="badge badge-light float-right fas fa-comment text-info">@(Model.ChildCommentList.Count + Model.ParentCommentList.Count)</span>
                                
                                <a  id="addLikeCountBtn" class="badge float-right fas fa-heart text-danger" value="${@Model.CurrentPost.LikeCount}" >@Model.CurrentPost.LikeCount</a>
                                <span class="badge float-right far fa-images text-success">3</span>
                            </h5>
                        </div>
                        <div class="card-text">
                            @Model.CurrentPost.Content
                        </div>
                    </div>
                    @*댓글 작성란 *@
                    <div class="card-footer bg-white">
                  
                        <form class="input-group m-lg-0" method="post">
                            <input type="text"  asp-for="TableComment.Content" class="form-control" placeholder="댓글을 입력하세요.">
                            <input type="hidden" asp-for="TableComment.ParentCommentNumber" value="0" />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-outline-dark fas fa-pen-fancy text-primary" onclick="@Model.ParentCommentNumber=1;"></button>
                            </div>
                        </form>
                    </div>
                    @*댓글 목록*@
                <div class="list-group">
                    @for (int i = 0; i < Model.ParentCommentList.Count; i++)
                    {
                        var collapseId = "childComment" + i;
                        <div class="list-group-item border-top">
                            <p class="text-muted">
                                익명
                                <a href="#reportModal" class="badge badge float-right" data-toggle="modal">신고</a>
                                <a href="#messageModal" class="badge badge float-right" data-toggle="modal">쪽지</a>

                                <a  href="#likeModal" class="badge badge float-right" data-toggle="modal">공감</a>

                                <a class="badge badge float-right" data-toggle="collapse" href="#@collapseId">대댓글</a>
                            </p>

                            <p>
                                @Model.ParentCommentList[i].Content

                            </p>
                            <p class="text-primary">
                                @Model.ParentCommentList[i].CreatedTime
                                <i class="fas fa-heart text-danger">54</i>
                            </p>

                            @for (var j = 0; j < Model.ChildCommentList.Count; j++)
                            {
                                if (Model.ChildCommentList[j].ParentCommentNumber == (i + 1))
                                {
                                    <div class="list-group-item ml-4 bg-light">
                                        @Model.ChildCommentList[j].Content
                                    </div>}

                            }
                        </div>
                        <form class="input-group mb-2 mt-2 ml-4 collapse" method="post" id="@collapseId" style="width:96%">

                            <input type="text" class="form-control" asp-for="TableComment.Content" placeholder="대댓글을 입력하세요.">
                            @{ var value = i + 1;}
                            <input type="hidden" asp-for="TableComment.ParentCommentNumber" value="@value" />

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-outline-dark fas fa-pen-fancy text-primary">
                                </button>
                            </div>
                        </form>
                        @*쪽지 modal*@
                        <div class="modal" id="messageModal">
                            <partial name="MessageModal" />
                        </div>
                        @*신고 modal *@
                        <div class="modal" id="reportModal">
                            <partial name="ReportModal" />
                        </div>
                        //공감 modal
                        <div class="modal" id="likeModal">
                            <partial name="Like" />
                        </div>
                        //북마크 Modal
                        <div class="modal" id="bookMarkModal">
                            <partial name="BookMark" />
                        </div>

                    }
                </div>
                </div>
                <a type="button" class="btn btn-outline-dark" asp-page="/Board/Index" asp-route-boardCode="@Model.CurrentPost.BoardId" style="margin-top:10px;">글 목록</a>
            </div>
            <div class="col-lg-3">
                <partial name="Sidebar"/>
            </div>
        </div>
    </div>
</body>